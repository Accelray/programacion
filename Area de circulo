#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main() {
	float radio, area, Pi=3.141516;
	cout<<"Ingresar radio: ";
	cin>>radio;
	area=Pi*radio*radio;
	cout<<"El area de la circunferencia es: " <<area;
	getch();
}
