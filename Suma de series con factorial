#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	float S,x;
	int n,i,Flag,Fact;
	S=0; //Acumulador de suma
	Flag=-1; //Inicia la serie en negativo
	Fact=1; //Acu,ulador de producto
	cout<<"Ingresar el valor final de la serie: ";
	cin>>n;
	cout<<"Ingresar el valor x: ";
	cin>>x;
	for(i=1;i<=n;i=i+2)
	{
		S=S+Flag*(pow(x,i)/Fact);
		Fact=Fact*i*(i+1)*(i+2);
	}
	cout<<"La suma es: "<<S;
	getch();
}
